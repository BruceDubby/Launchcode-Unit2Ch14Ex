@{
}

<h1>Delete Event</h1>

<form method="post">
    @foreach(var evnt in ViewBag.events)
            {
            <div class="form-group">

                <label>
                <span>@evnt.Name</span>
                <input type="checkbox" name="eventsIds" value="@evnt.Id" class="form-control">
                </label>        
            </div>
            }
       <input type="submit" value="Delete Selected Events" class="btn btn-danger"/> 
</form>