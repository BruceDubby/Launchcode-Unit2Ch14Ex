@{
    
}

<h1>Coding Events</h1>

<p>    
    <a asp-controller="Events" asp-action="Add">Add Event</a>    
</p>

<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>

@if(ViewBag.events.Count == 0)
            {
                <p>No events yet</p>
            }

<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<table style="width:100%">
    <tr>
        <th>ID</th>
        <th>Event Name</th>
        <th>Event description</th>
        <td><a href="/Events/Edit/1">Edit Event</a></td>
    </tr>
    @foreach(var meeting in ViewBag.events)
            {
<tr>
    <td>@meeting.Id</td>
    <td>@meeting.Name </td>
    <td>@meeting.Description </td>
    <td><a asp-controller="Events" asp-action="Edit" asp-route-id="@meeting.Id">Edit Event</a></td>

</tr>
            }
</table>